
html {
    font-size: 62.5%;
    overflow-y: scroll;
    height: 100%;
    box-sizing: border-box;
}

*, *:before, *:after {
    box-sizing: inherit;
}

body {
    font-family: $font-family;
    font-size: $font-size;
    font-weight: normal;
    line-height: $line-height;
    color: $font-color;
    min-height: 100%;
    background: white;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
}
